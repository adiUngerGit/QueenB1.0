<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBackgroundPick"
    tools:context=".Ex4">

    <Button
        android:layout_width="35dp"
        android:onClick="backHome"
        android:layout_height="32dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/home_icon"
        app:layout_constraintBottom_toTopOf="@+id/InstructionsBehaind"
        app:layout_constraintEnd_toStartOf="@+id/InstructionsBehaind"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64" />

    <TextView
        android:id="@+id/InstructionsBehaind"
        android:layout_width="327dp"
        android:layout_height="487dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_corners"
        android:elegantTextHeight="true"
        android:fontFamily="@font/alef"
        android:gravity="center"
        android:text="@string/Mission4"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.323" />

    <Button
        android:id="@+id/button3"
        android:layout_width="341dp"
        android:layout_height="38dp"

        android:background="@drawable/rounded_corners"
        android:onClick="nextPage"
        android:text="לשאלה ליחצי..."
        android:textColor="@color/blue"
        android:textColorHighlight="@color/lightBackgroundPick"
        android:textColorHint="#573636"
        android:textColorLink="@color/lightBackgroundPick"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InstructionsBehaind"
        app:layout_constraintVertical_bias="0.098" />

</androidx.constraintlayout.widget.ConstraintLayout>