<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/lightPink"

    >


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/lightPink"


        >

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/beyonce_icon"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/profile_image"
            android:layout_toRightOf="@id/profile_image"
            android:text="ruti pop"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/profile_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_name"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/profile_image"
            android:text="8 grade, jerusalem, brener school"
            android:textSize="15dp"

            />

        <ImageView
            android:id="@+id/whatsapp_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/profile_description"
            android:layout_marginLeft="120dp"
            android:layout_toRightOf="@id/profile_image"
            android:src="@drawable/whatsapp_icon" />
        <ImageView
            android:id="@+id/email_button"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_below="@id/profile_description"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/profile_image"
            android:src="@drawable/email_icon" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>