<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBackgroundPick"
    tools:context=".FirstPageQuestions">


    <Button
        android:layout_width="35dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/home_icon"
        android:onClick="backHome"
        app:layout_constraintBottom_toTopOf="@+id/InstructionsBehaind"
        app:layout_constraintEnd_toStartOf="@+id/InstructionsBehaind"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64" />

    <Button
        android:id="@+id/start"
        android:layout_width="327dp"
        android:layout_height="63dp"
        android:background="@drawable/button_rounded_corner"
        android:fontFamily="@font/alef"
        android:onClick="nextPage"
        android:text="יאלה! מתחילים!"
        android:textColor="@color/lightBackgroundPick"
        android:textColorHint="@color/colorPrimary"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.487" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="282dp"
        android:layout_height="492dp"
        android:layout_marginTop="28dp"
        android:ellipsize="none"
        android:fontFamily="@font/alef"
        android:gravity="center"
        android:text="@string/instructions"
        android:textColorHint="#FFFFFF"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>