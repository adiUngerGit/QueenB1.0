<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBackgroundPick"
    tools:context=".Ex4B">

    <Button
        android:id="@+id/button4"
        android:layout_width="341dp"
        android:layout_height="38dp"

        android:layout_marginTop="83dp"
        android:layout_marginBottom="116dp"
        android:background="@drawable/rounded_corners"
        android:onClick="nextPage"
        android:text="לשאלה הבאה..."
        android:textColor="@color/blue"
        android:textColorHighlight="@color/lightBackgroundPick"
        android:textColorHint="#573636"
        android:textColorLink="@color/lightBackgroundPick"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button2"
        app:layout_constraintVertical_bias="0.098" />

    <EditText
        android:id="@+id/answer"
        android:layout_width="315dp"
        android:layout_height="61dp"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_corners"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InstructionsBehaind">

    </EditText>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/button_rounded_corner"
        android:onClick="finish"
        android:text="סיימתי"
        android:textColor="@color/lightBackgroundPick"
        android:textColorHighlight="@color/lightBackgroundPick"
        android:textColorHint="#573636"
        android:textColorLink="#BF0404"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer"
        app:layout_constraintVertical_bias="0.091" />

    <TextView
        android:id="@+id/InstructionsBehaind"
        android:layout_width="326dp"
        android:layout_height="357dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_corners"
        android:elegantTextHeight="true"
        android:fontFamily="@font/alef"
        android:gravity="center"
        android:text="@string/Mission4Q"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />


    id/InstructionsBehaind" />
</androidx.constraintlayout.widget.ConstraintLayout>